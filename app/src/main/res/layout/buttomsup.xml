<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/button2"
        android:onClick="playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:text="topcenter" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:onClick="setLoc"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:text="topright" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:onClick="setLoc"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:text="centerleft" />
    <Button
        android:onClick="setLoc"
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:text="centerright" />
    <Button
    android:id="@+id/button6"
    android:layout_width="wrap_content"
        android:onClick="setLoc"
        android:layout_height="wrap_content"
    android:layout_gravity="bottom|left"
    android:text="bottomleft" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setLoc"
        android:layout_gravity="bottom|center"
        android:text="bottomcenter" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:onClick="setLoc"
        android:text="bottom right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLocOut"
        android:text="hi"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:text="topleft"
        android:onClick="setLoc"/>
</FrameLayout>